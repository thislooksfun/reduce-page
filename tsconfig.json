{
  "include": ["**/*"],
  "exclude": ["node_modules/*", "dist/*"],
  "compilerOptions": {
    // This root-level config is used for typechecking the entire project, and
    // thus includes files that should not be in the final build. For the final
    // build settings, see `tsconfig.build.json`.
    "noEmit": true,

    "rootDir": ".",
    "outDir": "dist",

    // enable latest features
    "lib": ["esnext"],
    "module": "NodeNext",
    "target": "ESNext",

    "moduleResolution": "NodeNext",

    "allowJs": true, // allow importing `.js` from `.ts`
    "esModuleInterop": true, // allow default imports for CommonJS modules

    // strictest code
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "ts-node": {
    "esm": true
  }
}
